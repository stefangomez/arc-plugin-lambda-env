{
  "name": "arc-plugin-lambda-env",
  "version": "0.0.3",
  "description": "Arc serverless framework (arc.codes) plugin for adding env variables to your lambdas from architect created resources",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "test:unit": "jasmine --config=test/jasmine.json",
    "test": "npm run lint && npm run test:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stefangomez/arc-plugin-lambda-env.git"
  },
  "keywords": [
    "serverless",
    "architect",
    "plugin",
    "lambda"
  ],
  "author": "Stefan Gomez <stefangomez@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stefangomez/arc-plugin-lambda-env/issues"
  },
  "homepage": "https://github.com/stefangomez/arc-plugin-lambda-env#README",
  "devDependencies": {
    "@architect/eslint-config": "^2.0.1",
    "@architect/inventory": "^2.0.4",
    "@architect/package": "^7.0.1",
    "eslint": "^8.0.0",
    "fs-extra": "^9.1.0",
    "jasmine": "^3.6.4"
  },
  "dependencies": {
    "@architect/utils": "^3.0.2"
  },
  "eslintConfig": {
    "extends": "@architect/eslint-config",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
